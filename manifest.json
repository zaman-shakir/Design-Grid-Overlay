{
  "manifest_version": 3,
  "name": "Design Grid Overlay",
  "short_name": "Design Grid",
  "description": "Modern Manifest V3 grid overlay extension with opacity controls, presets, and color pickers. Fork of the original eBay Design Grid Overlay.",
  "version": "1.1.0",
  "author": "Shakir Zaman (Enhanced fork of eBay's original)",
  "homepage_url": "https://github.com/zaman-shakir/Design-Grid-Overlay",
  "icons": { "16": "icons/Logo16.png",
           "48": "icons/Logo48.png",
          "128": "icons/Logo128.png" },
  "action": {
    "default_popup": "src/popup.html"
  },
  "background": {
    "service_worker": "src/executedScripts/background.js"
  },
  "web_accessible_resources": [{
    "resources": [
      "src/css/grid.css",
      "src/css/report.css"
    ],
    "matches": ["<all_urls>"]
  }],
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "file://*/*"
  ],
  "commands": {
    "toggle-columns": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Toggle columns"
    },
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Activate the extension"
    },
    "toggle-lines": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Command+Shift+H"
      },
      "description": "Toggle lines"
    }
  }
}
